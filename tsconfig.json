{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2019", "ES2020"],
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true,
    "outDir": "./",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@api/*": ["api/*"],
      "@controllers/*": ["controllers/*"],
      "@config/*": ["config/*"],
      "@cron/*": ["cron/*"],
      "@interfaces/*": ["interfaces/*"],
      "@libraries/*": ["universe/v1/libraries/*"],
      "@schema/*": ["schema/*"],
      "@services/*": ["services/v1/*"],
      "@universe/*": ["universe/*"]
    }
  }
}
